{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=WorkIntakeSystemDb;Trusted_Connection=true;MultipleActiveResultSets=true",
    "Redis": "localhost:6379"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "Caching": {
    "DefaultExpirationMinutes": 30,
    "PriorityCalculationCacheMinutes": 15,
    "IISOutputCacheEnabled": true,
    "IISOutputCacheMinutes": 30,
    "RedisDistributedEnabled": true,
    "DefaultMemoryExpirationMinutes": 15,
    "DefaultDistributedExpirationMinutes": 60,
    "DatabaseQueryCacheMinutes": 15,
    "ConfigurationCacheHours": 2
  },
  "WindowsAuthentication": {
    "Enabled": true,
    "Domain": "yourdomain.local",
    "LdapServer": "ldap://yourdomain.local:389",
    "LdapBaseDn": "DC=yourdomain,DC=local",
    "LdapServiceAccount": "CN=ServiceAccount,OU=Service Accounts,DC=yourdomain,DC=local",
    "LdapServicePassword": "your-service-password",
    "UseSSL": true,
    "CacheExpirationMinutes": 30
  },
  "ADFS": {
    "Authority": "https://your-adfs-server/adfs",
    "ClientId": "your-adfs-client-id",
    "Audience": "your-adfs-audience",
    "MetadataUrl": "https://your-adfs-server/adfs/.well-known/openid_configuration",
    "Enabled": false
  },
  "ApiGateway": {
    "RateLimitPerMinute": 1000,
    "EnableThrottling": true,
    "EnableApiVersioning": true,
    "DefaultApiVersion": "1.0",
    "ApiVersionHeader": "X-Api-Version"
  },
  "ServiceBroker": {
    "Enabled": true,
    "QueueName": "WorkIntakeQueue",
    "ServiceName": "WorkIntakeService",
    "ContractName": "WorkIntakeContract",
    "MessageTimeout": 30000
  },
  "PriorityCalculation": {
    "TimeDecayEnabled": true,
    "MaxTimeDecayMultiplier": 2.0,
    "BusinessValueWeight": 1.0,
    "CapacityAdjustmentEnabled": true
  }
}