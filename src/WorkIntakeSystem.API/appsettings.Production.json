{
  "ConnectionStrings": {
    "DefaultConnection": "Server=your-production-server;Database=WorkIntakeSystemDb_Prod;Trusted_Connection=true;MultipleActiveResultSets=true",
    "Redis": "your-redis-server:6379"
  },
  "JwtSettings": {
    "Secret": "production-super-secret-jwt-key-with-at-least-32-characters-for-production",
    "Issuer": "WorkIntakeSystem-Prod",
    "Audience": "WorkIntakeSystem-Prod",
    "ExpirationHours": 8
  },
  "EmailSettings": {
    "SmtpServer": "smtp.office365.com",
    "SmtpPort": 587,
    "SmtpUsername": "noreply@yourcompany.com",
    "SmtpPassword": "your-production-email-password",
    "EnableSsl": true,
    "FromEmail": "noreply@yourcompany.com",
    "FromName": "Work Intake System",
    "AppUrl": "https://workintake.yourcompany.com"
  },
  "Security": {
    "ContentSecurityPolicy": "default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self' data:; font-src 'self'; connect-src 'self';"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      },
      "Https": {
        "Url": "https://localhost:5001",
        "Certificate": {
          "Path": "certificates/ssl-certificate.pfx",
          "Password": "your-certificate-password"
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  }
} 